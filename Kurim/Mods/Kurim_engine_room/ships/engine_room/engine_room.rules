Part : <./Data/ships/terran/base_part_terran.rules>/Part
{
	NameKey = "Parts/EngineRoom"
	IconNameKey = "Parts/EngineRoomIcon"
	ID = kurim.weapon_room
	EditorGroup = "Flight"
	DescriptionKey = "Parts/EngineRoomDesc"
	Resources
	[
		[steel, 72]
		[coil2, 28]
		[tristeel, 9]
	]
	Size = [3, 3]
	IsRotateable = false
	SelectionPriority = 1
	MaxHealth = 9000
	TypeCategories = [engine_room, uses_power, is_crewed]
	ReceivableBuffs : ^/0/ReceivableBuffs []
	BlockedTravelCells
	[
		[1, 1]
	]
	ForceManhattanPathInPart = true
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [64, 64]
	}
	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, BatteryStorage, PartCrew]
			Mode = All
		}

		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
			RequiresCommand = false
		}

		CommandConsumer
		{
			Type = CommandConsumer
			OperationalToggle = PowerToggle
			CommandPoints = 6
		}

		BatteryStorage
		{
			Type = ResourceStorage
			ResourceType = battery
			MaxResources = 4000
		}
		CombinedBatteryStorage
		{
			Type = MultiResourceStorage
			ResourceType = battery
			ResourceStorages = [BatteryStorage]
			ViaBuffs
			{
				OutgoingBuffProviders = [BuffProvider]
				ComponentID = BatteryStorage
			}
			AddMode = PrioritizeLeastResources
			ReceiveResourceMediaEffects = &/COMMON_EFFECTS/Weapon_Supply
		}
		BatteryConsumer
		{
			Type = ResourceConsumer
			ResourceType = battery
			Storage = CombinedBatteryStorage
			DefaultPriority = &/PRIORITIES/Weapon_Supply
			ResupplyThreshold = 500
			OperationalToggle = PowerToggle
		}

		PowerDrain
		{
			Type = ResourceConverter
			OperationalToggle = IsOperational
			FromStorage = BatteryStorage
			FromQuantity = 100
			MinFromQuantityForConversion = 1
			Interval = 1
		}

		BuffProvider
		{
			Type = GridBuffProvider
			BuffType = Engine
			BuffAmount = 50%
			GridDistance = 1
			OperationalToggle = IsOperational
		}

		CrewLocation1
		{
			Type = CrewLocation
			Location = [0.47, 1.5]
			Rotation = 90d
		}
		CrewLocation2
